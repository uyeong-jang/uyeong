{
  "compilerOptions": {
    /* Paths */
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@_types/*": ["src/types/*"],
      "@pages/*": ["src/components/pages/*"],
      "@_settings/*": ["src/components/UI/_settings/*"],
      "@organisms/*": ["src/components/UI/organisms/*"]
    },

    /* Project */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    /* Imports */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Additional */
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.config.js"],
  "exclude": ["node_modules", "dist", "coverage", ".next"]
}
